@model NoteViewModel
@{
    ViewData["Title"] = "Add Note";
    Layout = "_Master";
}
<h3>Добавление заметки</h3>
<form asp-action="AddNew" asp-controller="Note" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div>
        <div class="form-group">
            <label asp-for="Content">Содержимое заметки</label><br />
            <input asp-for="Content" />
            <span asp-validation-for="Content"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Добавить" class="btn btn-outline-dark" />
        </div>
    </div>
</form>